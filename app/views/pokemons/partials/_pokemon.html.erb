
<%= link_to pokemon_path(pokemon) do %>

  <div class="card-trip rounded-3" style="max-width: 540px;">
      <%# POKEBALL SPRITE IF POKEMON OWNED %>
      <% if current_user.present? && (pokemon.user_id == current_user.id) %>
        <div class="d-flex flex-row-reverse">
          <%= image_tag "pokeball_sprite.png", style: "width: 6%; right: 10px; offset: 5px 5px 0px 0px;", class: "me-3 mt-3" %>
        </div>
      <% end %>
        <%# DISPLAY API IMG OR USER IMG IF KEY PRESENT %>
        <% if pokemon.photo.key.present?%>
          <%= cl_image_tag pokemon.photo.key, height: 300, width: 400, crop: :fill, class: "relative" %>
        <% else %>
          <img src="<%= pokemon.image_url%>">
        <% end %>

    <div class="d-flex justify-content-between mt-2 p-2">
      <div class="ms-3">
        <h2> <%= pokemon.name %></h2>
        <p><strong>Categorie</strong> <%= pokemon.category  %></p>
        <p><strong>Nature</strong> <%= pokemon.nature  %></p>
      </div>
      <div class="me-3">
        <h2><%= pokemon.price%> â‚½</h2>
      </div>
    </div>
  </div>
<% end %>
