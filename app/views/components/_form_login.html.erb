<div class='background'>
  <div class="container vh-100 d-flex align-items-center justify-content-center">
    <div class="p-3">
      <div class="px-5 py-4 border border-3 rounded-5 border-dark background_form">
        <div class="d-flex justify-content-center mb-3">
          <%= image_tag 'logo.png', class:"rounded-circle", alt: "pokeball", width: 100%>
        </div>
        <div class='d-flex justify-content-center mb-3'>
          <h1>Add a new pokemon !</h1>
        </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions justify-content-center mt-5" style="height: 40px">
              <%= f.button :submit, "Log in" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
          <div class="mt-4">
            <%= link_to "retour Ã  la liste des Pokemons", pokemons_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
