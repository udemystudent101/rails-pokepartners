<div class='background'>
  <div class="container d-flex align-items-center justify-content-center">
    <div class="p-3 my-3">
      <div class="px-5 py-4 border border-3 rounded-5 border-dark background_form">
        <div class="d-flex justify-content-center mb-3">
          <%= image_tag 'logo.png', class:"rounded-circle", alt: "pokeball", width: 100%>
        </div>
        <div class='d-flex justify-content-center mb-3'>
          <h1><%= @pokemon.name.nil? ? "Ajouter un pokemon !" : "Modifier #{pokemon.name}" %></h1>
        </div>
        <%=simple_form_for @pokemon do |f| %>
        <%= f.input :name %>
        <%= f.input :nature do %>
          <%= f.select :nature, Pokemon::NATURE%>
        <% end %>
        <%= f.input :category do %>
          <%= f.select :category, Pokemon::CATEGORIES %>
        <% end %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <div class='d-flex justify-content-center mt-5 submit' style="height: 40px">
          <%= f.submit "submit", class: 'px-3 py-2 rounded-pill border border-0 btn-submit'%>
        </div>
        <% end %>
        <div class="mt-4 retour-list">
          <%= link_to "retour Ã  la liste des Pokemons", pokemons_path %>
        </div>
      </div>
    </div>
  </div>
</div>
